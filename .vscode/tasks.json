	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "out/rel/sdl2_example",
			"dependsOn": "build",
			"problemMatcher": [],
			"group": "build"
		}
	]
}